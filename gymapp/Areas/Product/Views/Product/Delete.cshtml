@model App.Models.Products.Product
@using App.Menu
@inject AdminSidebarService _AdminSidebarService

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1>@ViewData["Title"]</h1>
<p>Bạn có chắc chắn muốn xóa sản phẩm?</p>
<h4>@Model.ProductName</h4>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductName" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Danh sách sản phẩm</a>
    </form>
</div>

@{
    _AdminSidebarService.SetActive("Product", "Delete", "Product");
}
@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}