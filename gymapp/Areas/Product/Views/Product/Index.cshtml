@model IEnumerable<App.Models.Products.Product>
@using App.Menu
@inject AdminSidebarService _AdminSidebarService

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<partial name="_AlertMessage" />

<p>
    <a asp-action="Create">Tạo sản phẩm mới </a>
</p>
<p>Tổng số sản phẩm: @ViewBag.totalPosts</p>
<table class="table">
    <thead>
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdated)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @(++ViewBag.postIndex)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </a> 
                <br>
                <small>
                    @item.Category.Title
                </small>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProductID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductID">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="_PagingXTL" model="@ViewBag.pagingModel" />


@{
    _AdminSidebarService.SetActive("Product", "Index", "Product");
}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}