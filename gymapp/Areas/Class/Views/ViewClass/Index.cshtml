@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<App.Models.Classes.Class>
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Khóa tập";
    var user = ViewBag.user as App.Models.AppUser;
}
<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb/classes-breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Khóa tập</h2>
                        <div class="breadcrumb-option">
                            <a asp-action="Index" asp-controller="Home"><i class="fa fa-home"></i> Trang chủ</a>
                            <span>Khóa tập</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Classes Section Begin -->
    <section class="classes-section classes-page spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Khóa tập</h2>
                    </div>
                </div>
                @foreach (var classModel in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-class-item set-bg" data-setbg="/img/classes/classes-1.jpg">
                            <div class="si-text">
                                <h4>@classModel.ClassTitle</h4>
                                <span><i class="fa fa-user"></i>@classModel.Instructor.Name</span>
                                <button type="button" class="btn btn-registerclass" data-toggle="modal"
                                        data-target=".bd-example-modal-sm">Đăng ký</button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Classes Popup Begin -->
                    <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
                    aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="container">
                                    <div class="classes-page-text">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="register-text">
                                                    <div class="section-title">
                                                        <h2>Đăng ký khóa tập</h2>
                                                        <!-- <p>The First 7 Day Trial Is Completely Free With The Teacher</p> -->
                                                    </div>
                                                    <form action="#" class="register-form">
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <label for="name">Họ và tên</label>
                                                                <input type="text" id="name" va>
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <label for="last-name">Địa chỉ</label>
                                                                <input type="text" id="address" value="@user.HomeAdress">
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <label for="mobile">Số điện thoại</label>
                                                                <input type="text" id="mobile" value="@user.PhoneNumber">
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <label for="hlv">Huấn luyện viên:</label>
                                                                <input type="text" value="" readonly />
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <label for="time">Lịch tập:</label>
                                                                <input type="text" value="Lịch tập" readonly />
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <label for="cost">Giá:</label>
                                                                <input type="text" value="500.000 VND" readonly />
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="register-btn">Đăng ký</button>
                                                    </form>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Classes Popup End -->
                }
                
            </div>
            
        </div>
    </section>
    <!-- Classes Section End -->
    
@section Scripts
{
    <script>
        $(document).ready(function () {
            $(".btn-registerclass").click(function () {
                var classTitle = $(this).parent().find("h4").text();
                var instructorName = $(this).parent().find("span").text();
                var instructorName = instructorName.substring(3);
                var classTime = $(this).parent().find("p").text();
                var classTime = classTime.substring(3);
                var classCost = $(this).parent().find("h5").text();
                var classCost = classCost.substring(3);
                $(".register-text").find("input").eq(0).val(classTitle);
                $(".register-text").find("input").eq(1).val(instructorName);
                $(".register-text").find("input").eq(2).val(classTime);
                $(".register-text").find("input").eq(3).val(classCost);
            });
        });
    </script>
}

